{
    "compilerOptions": {
        "module": "system",
        "removeComments": true,
        "preserveConstEnums": true,
        "noErrorTruncation": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strict":true,
        "sourceMap": true,
        "target": "es6",
        "module": "es6",
        "outDir":"./dist"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
